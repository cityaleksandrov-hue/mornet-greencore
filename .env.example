# Environment
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/mornet_greencore
TIMESCALE_URL=postgresql://postgres:password@localhost:5432/mornet_greencore
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d

# Blockchain
BLOCKCHAIN_RPC_URL=https://rpc.example.com
BLOCKCHAIN_CHAIN_ID=1
ORACLE_PRIVATE_KEY=your-oracle-private-key
DAO_TREASURY_ADDRESS=0x...
E_TOKEN_ADDRESS=0x...
GCM_TOKEN_ADDRESS=0x...

# MQTT
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# Bank Gateway
BANK_API_URL=https://sandbox.bank.example.com
BANK_API_KEY=your-bank-api-key

# GC-Guard
GCGUARD_API_URL=https://gcguard.example.com
GCGUARD_API_KEY=your-gcguard-api-key

# Admin UI
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000

# Public UI
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_CHAIN_ID=1

# Observability
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Security
TLS_CERT_PATH=/path/to/cert.pem
TLS_KEY_PATH=/path/to/key.pem

